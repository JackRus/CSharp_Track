@model Visitor
@{
	Layout = "_NoBody";
}


<div class="row" style="margin-top: 30px;">
	
	<div class="col-md-4"></div>
	<div class="col-md-4">
		
		@if (ViewData["CheckMessage"] != null)
		{
			<div class="myInfoRed">@ViewData["CheckMessage"]</div>
		}

		<form asp-action="CheckInForm" asp-controller="Visitor" method="POST" role="form" autocomplete="off">
			<legend>Please input your Registration number</legend>
		
			<div class="form-group">
				<input asp-for="RegistrationNumber" type="number" class="form-control input-large" maxlength="10" placeholder="..." />
			</div>
		
			<button type="submit" class="btn mybtn bgBase">Check In</button>
		</form>	
	</div>
	<div class="col-md-4"></div>
</div>

<div class="row">
	
	<div class="col-md-4"></div>
	<div class="col-md-4">
		
		<div class="questions">
			<a href="" onclick=""><br />I forgot my registration number.</a>
		</div>
		<div class="questions">
			<a href="/Visitor/Register">I'm not registered.</a>
		</div>

	</div>
	<div class="col-md-4"></div>
</div>
