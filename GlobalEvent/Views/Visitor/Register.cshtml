@model Order
@{
	Layout = "_NoBody";
}

<div class="row" style="margin-top: 30px;">
	
	<div class="col-md-4"></div>
	<div class="col-md-4">
		
		@if (ViewData["OrderMessage"] != null)
		{
			<div class="myInfoRed">@ViewData["OrderMessage"]</div>
		}
		<form asp-action="RegisterForm" asp-controller="Visitor" method="POST" role="form" autocomplete="off">
			<legend>Please input your ORDER number</legend>
		
			<div class="form-group">
				<input asp-for="Number" type="number" class="form-control input-large" maxlength="10" placeholder="...">
			</div>
		
			<button type="submit" class="btn mybtn bgBase">Register</button>
		</form>
		
	</div>
	<div class="col-md-4"></div>
</div>
